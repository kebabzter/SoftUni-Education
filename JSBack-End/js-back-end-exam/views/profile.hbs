<section id="user">
    <div class="user-info">
        <div class="user-logo">
            <img src="/static/images/user-logo.webp">
        </div>
        <h1 class="user-email">{{body.email}}</h1>
        <h2 class="created-blogs-count">Total Created Blogs: {{body.createdBlogs.length}}</h2>
        <h2 class="followed-blogs-count">Total Followed Blogs: {{body.followedBlogs.length}}</h2>
    </div>
</section>
<section class="profile-blogs">
    <div class="created-blogs">
        <h2 class="section-title">Created Blogs</h2>
        {{#if body.createdBlogs}}
            {{#each body.createdBlogs}}
            {{> blogCard}}
            {{/each}}
        {{else}}
            <h2 class="no-blog-in-profile">You haven't published a blog yet...</h2>
        {{/if}}


    </div>

    <div class="followed-blogs">
        <h2 class="section-title">Followed Blogs</h2>
        {{#if body.followedBlogs}}
            {{#each body.followedBlogs}}
            {{> blogCard}}
            {{/each}}
        {{else}}
            <h2 class="no-blog-in-profile">You have no blogs followed yetâ€¦</h2>
        {{/if}}
    </div>

</section>