<section id="create-container">
    <div class="create-container-info">
        <h1>Create Blog</h1>
        <form method="post", action="/blogs/create">
            <label>Title:</label>
            <input name="title" type="text" id="title" value="{{body.title}}">

            <label>Image:</label>
            <input name="image" type="text" id="image" placeholder="http://..." value="{{body.image}}">

            <label>Content:</label>
            <textarea id="content" name="content">{{body.content}}</textarea>

            <label>Blog Category:</label>
            <input name="category" type="text" id="category" value="{{body.category}}">

            <input type="submit" id="btn" value="POST">
        </form>
    </div>
</section>