<div class="login-box">
    <h1>Login</h1>
    <form action="/auth/login", method="post">
        <label>Email</label>
        <input type="text" placeholder="Email.." name="email", value="{{body.email}}">
        <label>Password</label>
        <input type="password" placeholder="Password.." name="password">
        <input type="submit" value="Submit">
    </form>
    <p>Not have an account? <a href="/auth/register">Register here</a></p>
</div>